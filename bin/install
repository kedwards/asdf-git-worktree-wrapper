#!/usr/bin/env bash

set -euo pipefail

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")

# shellcheck source=./lib/utils.bash
source "${plugin_dir}/lib/utils.bash"

install_git_worktree_wrapper() {
  local install_type=$1
  local version=$2
  local install_path=$3

  if [ "$install_type" != "version" ]; then
    fail "asdf-git-worktree-wrapper only supports release installs only"
  fi

  local download_url="https://github.com/lu0/git-worktree-wrapper/archive/refs/tags/v${version}.tar.gz" ;;
  local source_path="${install_path}/bin/git-worktree-wrapper.tar.gz"

  (
    echo "âˆ— Downloading and installing git-worktree-wrapper..."
    curl --silent --location --create-dirs --output "$source_path" "$download_url" || fail "Could not download"
    tar -xf "$source_path" -C "$install_path" --strip-components=1 || fail "Could not uncompress"
    echo "The installation was successful!"
    rm "$source_path"
  ) || (
    rm -rf "$install_path"
    fail "An error occurred"
  )
}

install_git_worktree_wrapper "$ASDF_INSTALL_TYPE" "$ASDF_INSTALL_VERSION" "$ASDF_INSTALL_PATH"